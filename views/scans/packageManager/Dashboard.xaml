<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Name="contentDiv"
	xmlns:util="clr-namespace:Wpf.Util;assembly=GridViewSort"
>
	<UserControl.Resources>
		<ResourceDictionary >
			<ResourceDictionary.MergedDictionaries >       
				<ResourceDictionary Source="{{{pwd}}}\views\layouts\styles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
		
	<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
		<Grid x:Name="ContentGrid">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="18*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="50"/>
				<RowDefinition Height="50"/>
				<RowDefinition MinHeight="250" Height="Auto"/>
				<RowDefinition Height="50"/>
			</Grid.RowDefinitions>
			
			<TextBlock Style="{StaticResource ResourceKey=bsTopNavBar}" Grid.ColumnSpan="3" Grid.Column="0" >
				<TextBlock x:Name="pkgMgrHome">Package Manager - Dashboard</TextBlock>
			</TextBlock>
			
			<Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2*"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
			
				<TextBlock Style="{StaticResource ResourceKey=bsTopNavBar}" Grid.Column="1"> Packages: </TextBlock>
				<TextBlock Style="{StaticResource ResourceKey=bsTopNavBar}" Grid.Column="2">
				
				<ComboBox Name="cboPkgs" ItemsSource="{Binding cboPkgs}" Width="200">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="{Binding Acronym}" Tag="{Binding Id}" />
							</StackPanel>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

				</TextBlock>
			</Grid>
			
			<Grid x:Name="pkgTopMenu" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Style="{StaticResource ResourceKey=bsTopSubNavBar}" />
				
			<Grid Grid.Column="1"  Grid.Row="2" x:Name="packageDisplayTable">
				<Grid.Resources>
					<AlternationConverter x:Key="BackgroundConverter">
						<SolidColorBrush>#f9f9f9</SolidColorBrush>
						<SolidColorBrush>#ffffff</SolidColorBrush>
					</AlternationConverter>
					<Style x:Key="alternatingWithBinding" TargetType="{x:Type ListBoxItem}">
						<Setter 
							Property="Background" 
							Value="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource BackgroundConverter}}"/>
					</Style>
				</Grid.Resources>
				
				<Border BorderThickness="0,0,0,1" BorderBrush="#cccccc">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
					
					<ListBox Margin="10" ItemsSource="{Binding packageSummaries}" HorizontalContentAlignment="Stretch" AlternationCount="2" BorderBrush="#e1e1e8" ItemContainerStyle="{StaticResource alternatingWithBinding}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="8">
						<ListBox.Template>
							<ControlTemplate>
								<DockPanel LastChildFill="True">
									<Grid DockPanel.Dock="Top" Height="30" Style="{StaticResource tblHeader}">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="1*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="1*"/>
											<ColumnDefinition Width="1*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
										</Grid.ColumnDefinitions>
										<Label Grid.Column="0">#</Label>
										<Label Grid.Column="1">Package</Label>
										<Label Grid.Column="2">HW</Label>
										<Label Grid.Column="3">SW</Label>
										<Label Grid.Column="4" Grid.ColumnSpan="3" >Scans</Label>
										<Label Grid.Column="8" Grid.ColumnSpan="4">Findings</Label>
									</Grid>
									<ItemsPresenter></ItemsPresenter>
								</DockPanel>
							</ControlTemplate>
						</ListBox.Template>
					
						<ListBox.ItemTemplate>
							<DataTemplate>
								<Border BorderThickness="0,1,0,0"  BorderBrush="#cccccc"  >
									<Grid  >
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="1*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="1*"/>
											<ColumnDefinition Width="1*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
											<ColumnDefinition Width="2*"/>
										</Grid.ColumnDefinitions>
											<TextBlock  Style="{StaticResource tblHeader}" Text="{Binding Path=Number}" Grid.Column="0"/>
											<TextBlock  Style="{StaticResource tblHeader}" Text="{Binding Path=Acronym}"  Grid.Column="1"/>
											<Button Style="{StaticResource btnDefault}" Content="{Binding Path=Hardware}"  Grid.Column="2" Padding="5"/>
											<Button Style="{StaticResource btnDefault}" Content="{Binding Path=Software}"  Grid.Column="3" Padding="5"/>
											<Button Style="{StaticResource btnPrimary}" Content="{Binding ACAS}" Grid.Column="4" Padding="5" />
											<Button Style="{StaticResource btnInfo}" Content="{Binding Path=CKL}"  Grid.Column="5" Padding="5"/>
											<Button Style="{StaticResource btnSuccess}" Content="{Binding Path=SCAP}"  Grid.Column="6" Padding="5"/>
											<Button Style="{StaticResource btnDanger}" Content="{Binding Path=Open}"  Grid.Column="8" Padding="5"/>
											<Button Style="{StaticResource btnWarning}" Content="{Binding Path=NotReviewed}"  Grid.Column="9" Padding="5"/>
											<Button Style="{StaticResource btnSuccess}" Content="{Binding Path=Completed}"  Grid.Column="10" Padding="5"/>
											<Button Style="{StaticResource btnInfo}" Content="{Binding Path=NotApplicable}"  Grid.Column="11" Padding="5"/>
									</Grid>
								</Border>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				
					<Button x:Name="btnAddNewPackage" Style="{StaticResource btnDefault}" Content="Add New" Grid.Row="1" Grid.Column="7"/>
				</Grid>
				</Border>
			</Grid>
			
		</Grid>
	</ScrollViewer>
</UserControl>